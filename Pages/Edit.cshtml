@page
@model EditModel
@{
    ViewData["Title"] = "Edit";
}

<div class="text-center">
    <h1 class="display-4">Edit a customer</h1>
</div>

@if (Model._error)
{
    <p style="color:red;">@Model._errorMessage</p>
}

<form method="post" asp-page-handler="Search">
    <label for="name">Search for a customer's name:</label>
    <input type="text" name="name" value="" />
    <br />
    <input type="submit" name="submit" value="Search" />
</form>

@if (Model._customer != null)
{
    <form method="post" asp-page-handler="Edit">
        <label for="name">Name:</label>
        <input type="text" name="name" readonly=true value="@Model._customer.Name" />
        <br />
        <label for="address">Address:</label>
        <input type="text" name="address" value="@Model._customer.Address" />
        <br />
        <label for="number">Number:</label>
        <input type="text" name="number" value="@Model._customer.Number" />
        <br />
        <label for="email">Email:</label>
        <input type="text" name="email" value="@Model._customer.Email" />
        <br />
        <input type="submit" name="submit" value="Edit" />
    </form>
}
